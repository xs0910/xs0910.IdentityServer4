@model CreateOrEditViewModel
@{
    ViewData["Title"] = "Create Client";
}


<div class="container-fluid">
    <div class="row">
        <ul class="breadcrumb col-md-12">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/Clients/Index">用户列表</a></li>
            <li class="breadcrumb-item active">编辑客户端</li>
        </ul>
    </div>
    <div class="row">
        <div class="col-md-6 m-auto">
            <h2>@ViewData["Title"]</h2>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-6 m-auto">
            <partial name="_ValidationSummary" />
            <form asp-route-returnUrl="@ViewData["ReturnUrl"]" asp-action="CreateOrEdit" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="ClientId"></label>
                    <input asp-for="ClientId" class="form-control" />
                    <span asp-validation-for="ClientId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ClientName"></label>
                    <input asp-for="ClientName" class="form-control" />
                    <span asp-validation-for="ClientName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ClientSecrets"></label>
                    <input asp-for="ClientSecrets" class="form-control" />
                    <span asp-validation-for="ClientSecrets" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AllowedGrantTypes"></label>
                    <input asp-for="AllowedGrantTypes" class="form-control" />
                    <span asp-validation-for="AllowedGrantTypes" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AllowedScopes"></label>
                    <input asp-for="AllowedScopes" class="form-control" />
                    <span asp-validation-for="AllowedScopes" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AllowedCorsOrigins"></label>
                    <input asp-for="AllowedCorsOrigins" class="form-control" />
                    <span asp-validation-for="AllowedCorsOrigins" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="RedirectUris"></label>
                    <input asp-for="RedirectUris" class="form-control" />
                    <span asp-validation-for="RedirectUris" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PostLogoutRedirectUris"></label>
                    <input asp-for="PostLogoutRedirectUris" class="form-control" />
                    <span asp-validation-for="PostLogoutRedirectUris" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>

        </div>
    </div>
</div>