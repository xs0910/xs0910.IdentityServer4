@model RegisterRoleViewModel
@{
    ViewData["Title"] = "Register Role";
}


<div class="container-fluid">
    <div class="row">
        <ul class="breadcrumb col-md-12">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active">注册角色</li>
        </ul>
    </div>
    <div class="row">
        <div class="col-md-6 m-auto">
            <partial name="_ValidationSummary" />
            <form asp-controller="RoleInfo" asp-action="Register" asp-route-returnUrl="/RoleInfo/Index" method="post">
                <h4>Create a new User</h4>
                <hr />
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OrderSort"></label>
                    <input asp-for="OrderSort" class="form-control" />
                    <span asp-validation-for="OrderSort" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
    </div>
</div>